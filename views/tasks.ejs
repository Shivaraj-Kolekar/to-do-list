<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    .content {
        background-color: #FFE66D;
        padding: 15px;
        margin: 10px;
        border-radius: 6px;
        width: 600px;
        height: auto;
        color: #000;

    }

    .card {
        display: flex;
        flex-direction: row-reverse;
        background: #000;
        padding: 15px;

    }

    .form {
        display: flex;
        flex-direction: column;
        margin: 10px;
        padding: 20px;
        border-radius: 8px;
        ;
        background-color: #F7FFF7;
        color: #000;
        width: max-content;
    }

    .elements {
        margin: 2px;
        padding: 6px;
        width: auto;
    }

    input {
        padding: 8px;
        border-radius: 6px;
        border: 1px solid gray;
        font-size: large;
    }

    button {
        padding: 8px;
        border-radius: 6px;
        border: none;
        font-size: large;
        background-color: #FF6B6B;
        color: #ffffff;
        width: 100px;
        height: 40px;
        margin: 8px;
        cursor: pointer;

    }

    button:hover {
        background-color: #ff9191;
    }

    body {

        font-family: Arial, Helvetica, sans-serif;
        background-color: #0B1D51;
        color: #ffffff;
        display: flexbox;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        font-size: 18px;

    }

    header {
        background: #FFEEDB;
        color: black;
        padding: 10px 0;
        width: 100%;

    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #000;
        padding: 0 20px 0px 20px;
    }

    .logo a {
        color: #000;
        text-decoration: none;
        font-size: 24px;
        margin: 10px;
    }

    .nav-links {
        list-style: none;
        display: flex;
        margin: 10px;
    }

    .nav-links li {
        margin-left: 20px;
        background-color: #36323233;
        padding: 10px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        margin: 10px;

    }

    .nav-links a {
        color: black;
        text-decoration: none;
        font-size: 20px;
    }

    .menu-icon {
        display: none;
        font-size: 28px;
        cursor: pointer;
    }

    section {
        padding: 30px;

    }

    @media (max-width: 768px) {
        .nav-links {
            display: none;
            flex-direction: column;
            width: 100%;
            position: absolute;
            top: 60px;
            left: 0;
            background: #333;
            text-align: center;
        }

        .nav-links li {
            margin: 10px 0;
        }

        .menu-icon {
            display: block;
        }

        .nav-links.active {
            display: flex;
        }
    }
</style>

<body>
    <header>
        <nav>
            <div class="logo">
                <h1><a href="http://localhost:8001/">ToDO list</a></h1>
            </div>
            <div class="menu-icon" onclick="toggleMenu()">
                &#9776;
            </div>
            <ul class="nav-links" id="nav-links">
                <li><a href="https://to-do-list-4ttz.vercel.app/">Home</a></li>
                <li><a href="https://to-do-list-4ttz.vercel.app/signup">Signup</a></li>
                <li><a href="https://to-do-list-4ttz.vercel.app/login">Login</a></li>
                <li><a href="https://to-do-list-4ttz.vercel.app/tasks">Tasks</a></li>
            </ul>
        </nav>
    </header>
    <section>
        <h1>Enter new task: </h1>

        <div class="form">
            <form method="POST" action="/tasks">
                <div class="elements">
                    <input type="string" placeholder="Task name" name="taskname" />
                </div>
                <div class="elements">

                    <input type="string" placeholder="Description" name="description" />
                </div>
                <div class="elements">
                    <input type="string" placeholder="Priority" name="status" />
                </div>
                <div class="elements">
                    <button class="button" type="submit">Generate</button>
                </div>
            </form>
        </div>

        <h1>Tasks : </h1>

        <% if (Task.length) { %>
            <% Task.forEach(task=> { %>
                <div class="content">
                    <div id="card">
                        <label>

                        </label>
                        <h3>
                            Name : <%= task.taskname %>
                        </h3>
                    </div>
                    <div id="card">
                        <label>

                        </label>
                        <p>
                            Description : <%= task.description %>
                        </p>
                    </div>
                    <div id="card">
                        <label>

                        </label>
                        <p>
                            Date : <%= task.date %>
                        </p>
                    </div>
                    <div id="card">
                        <label>

                        </label>
                        <p>
                            Priority : <%= task.status %>
                        </p>
                    </div>
                </div>

                <% }) %>
                    <% } else { %>
                        <p>No tasks found.</p>
                        <% } %>
    </section>
    <script>

        document.getElementById('showNumber').addEventListener('click', () => {
            document.getElementById('favDialog').showModal();
        })




    </script>
</body>

</html>